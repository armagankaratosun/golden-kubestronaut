# This Vagrantfile sets up a multi-node Kubernetes cluster with one control plane and two worker nodes.
# Each node is configured with a private network and specific resources.
# The control plane node forwards the Kubernetes API port to the host machine.
# Ansible is used to provision the cluster using the specified playbook and inventory.
# The nodes are defined in a simple array for easy management and configuration.

NODES = [
  { name: "controlplane", ip: "10.0.0.10" },
  { name: "worker1", ip: "10.0.0.11" },
  { name: "worker2", ip: "10.0.0.12" },
]

Vagrant.configure("2") do |config|
  config.vm.box = "bento/ubuntu-22.04"

  NODES.each do |node|
    config.vm.define node[:name] do |node_config|
      node_config.vm.hostname = node[:name]
      node_config.vm.network "private_network", ip: node[:ip]

      node_config.vm.provider "virtualbox" do |vb|
        vb.memory = 4096
        vb.cpus = 2
      end

      # Only forward Kubernetes API port for controlplane
      if node[:name] == "controlplane"
        node_config.vm.network "forwarded_port",
          guest: 6443,
          host: 6443,
          id: "kube-api"
      end
    end
  end

  # Optional: Enable provisioning
  config.vm.provision "ansible" do |ansible|
    ansible.playbook = "ansible/kubeadm-cluster.yaml"
    ansible.inventory_path = "ansible/inventory.yaml"
  end
end

